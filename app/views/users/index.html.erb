<!-- Button -->
<div class="controls text-right">
	<%= button_to '创建新用户', new_user_path, class: "btn btn-primary", method: :get %>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>账号</th>
			<th>姓名</th>
			<th>角色</th>
			<th>最后登录时间</th>
			<th>最后登录IP</th>
			<th>登录次数</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<% @users.each do |u| %>
		<tr>
			<td><%= u.loginname %></td>
			<td><%= u.name %></td>
			<td><%= u.roles.collect(&:name).join(",") %></td>
			<td><%= l u.last_sign_in_at rescue "" %></td>
			<td><%= u.last_sign_in_ip %></td>
			<td><%= u.sign_in_count %></td>
	    <td><%= link_to '编辑', edit_user_path(u) %></td>
	    <td><%= link_to '删除', u, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>

