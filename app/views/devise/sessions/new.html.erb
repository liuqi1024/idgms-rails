<div class="well">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :login, label: "用户名", :required => true, :autofocus => true, input_html: { class: "input-xlarge"} %>
	    <%= f.input :password, label: "密码", :required => true, input_html: { class: "input-xlarge"} %>
	    <%= f.input :remember_me, label: "下次不用登录", :as => :boolean if devise_mapping.rememberable? %>
	  </div>
	
	  <div class="form-actions">
	    <%= f.button :submit, "登录", class: "btn btn-primary" %>
	  </div>
	<% end %>

<%#= render "devise/shared/links" %>
</div>