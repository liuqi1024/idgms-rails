<div class="well">
<%= simple_form_for(@game, :html => {:class => "form-horizontal"}) do |f| %>

  <fieldset>
    <div id="legend" class="">
      <legend class="">部署新游戏 - 第一步</legend>
    </div>
    
		<%= f.input :code, label: "游戏编码", :required => true, :input_html => {:class => 'input-xlarge'} %>
    <div class="control-group">
		</div>

  </fieldset>

  <div class="actions">
    <%= f.submit "下一步", class: "btn btn-success" %>
		<%= link_to '返回', games_path, class: "btn btn-info" %>
  </div>
<% end %>
</div>