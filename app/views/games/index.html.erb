<!-- Button -->
<div class="controls text-right">
	<%= button_to '部署新游戏', new_game_path, class: "btn btn-primary", method: :get %>
</div>

<div class="row-fluid">
	<div class="span12">
		<ul class="nav nav-tabs">
			<li class="active">
				<a href="#">上市</a>
			</li>
			<li>
				<a href="#">已退市</a>
			</li>
			<li class="">
				<a href="#">待审核</a>
			</li>
			<li class="">
				<a href="#">被驳回</a>
			</li>
		</ul>
	</div>
</div>
	
<table class="table table-striped ">
  <tr>
    <th>游戏编码</th>
    <th>游戏名称</th>
    <th>当前程序版本</th>
    <th>Completed at</th>
    <th>描述</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.code %></td>
    <td><%= game.name %></td>
    <td><%= game.version %></td>
    <td><%= game.status %></td>
    <td><%= game.completed_at %></td>
    <td><%= game.desc %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

