<div class="row-fluid">
	<div class="span12">
		<ul class="nav nav-tabs">
				<li class="active">
					<a href="#">待审核生产批次</a>
				</li>
		</ul>
	</div>
</div>
	
<table class="table table-striped ">
  <tr>
    <th>生产批次编码</th>
    <th>所属游戏</th>
		<th>所属工作单</th>
    <th>印刷单元数</th>
		<th>当前进度</th>
		<% if params[:state] == 'reject' %>
			<th>驳回原因</th>
		<% end %>
    <th></th>
  </tr>

<% @product_batches.each do |product_batch| %>
  <tr>
    <td><%= link_to product_batch.code, audit_product_batch_path(product_batch) %></td>
    <td><%= link_to product_batch.worksheet.game.name, product_batch.worksheet.game %></td>
    <td><%= link_to product_batch.worksheet.code, product_batch.worksheet %></td>
		<td><%= product_batch.print_unit_count %></td>
    <td>数据检查完毕</td>
		<% if params[:state] == 'reject' %>
			<td><%#= product_batch.desc %></td>
		<% end %>
		<td><%= link_to '详细信息', audit_product_batch_path(product_batch), class: 'label label-info' %></td>
  </tr>
<% end %>
</table>

<br />


