<h1>Listing game_groups</h1>

<table>
  <tr>
    <th>Game</th>
    <th>Torrent</th>
    <th>Serial no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @game_groups.each do |game_group| %>
  <tr>
    <td><%= game_group.game %></td>
    <td><%= game_group.torrent %></td>
    <td><%= game_group.serial_no %></td>
    <td><%= link_to 'Show', game_group %></td>
    <td><%= link_to 'Edit', edit_game_group_path(game_group) %></td>
    <td><%= link_to 'Destroy', game_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

